{
	"compilerOptions": {
		"target": "es2022",
		"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		".eslintrc.js",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		".next/types/**/*.ts",
		"next.config.mjs",
		".prettierrc.js"
	],
	"exclude": [
		"supabase",
		"node_modules"
	]
}